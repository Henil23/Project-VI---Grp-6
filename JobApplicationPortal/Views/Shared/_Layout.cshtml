<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/stylesheet.css" rel="stylesheet" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <header>
        <h1>Job Portal</h1>
        <nav>
            @if (ViewData["IsSignedIn"] != null && ViewData["IsSignedIn"].ToString() == "True")
            {
                <span>Welcome, @ViewData["FirstName"]!</span>
            }
            <a href="/">Home</a>
            <a href="@Url.Action("SignIn", "Student")">Student</a>
            <a href="#">Employer</a>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        <p>&copy; 2025 Job Portal</>
    </footer>
</body>
</html>
